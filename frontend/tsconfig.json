{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"],
      "@/public/*": ["./public/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.js",
    "**/*.tsx",
    "**/*.ttf",
    "**/**/.ttf",
    "components/game/sprites/GamepadController.jsx",
    "components/game/canvas/plants/map.jsx",
    "components/game/canvas/Experience.tsx",
    "./public/*",
    "./public/fonts/*.ttf",
    "./public/fonts/*.js"
  ],
  "exclude": ["node_modules"]
}
